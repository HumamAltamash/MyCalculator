<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="50dp"
            android:id="@+id/txt"
            />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="50dp"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="50dp"
            map:layout_constraintEnd_toStartOf="@+id/b3"
            map:layout_constraintStart_toEndOf="@+id/b1"
            map:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="50dp"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="50dp"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/b1" />

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="1dp"
            android:text="5"
            android:textSize="50dp"
            map:layout_constraintEnd_toStartOf="@+id/b6"
            map:layout_constraintStart_toEndOf="@+id/b4"
            map:layout_constraintTop_toBottomOf="@+id/b2" />

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="50dp"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/b3" />

        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="50dp"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/b4" />

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="50dp"
            map:layout_constraintEnd_toStartOf="@+id/b9"
            map:layout_constraintStart_toEndOf="@+id/b7"
            map:layout_constraintTop_toBottomOf="@+id/b5" />

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="50dp"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/b6" />

        <Button
            android:id="@+id/b_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="50dp"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/b7" />

        <Button
            android:id="@+id/b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            map:layout_constraintEnd_toStartOf="@+id/beq"
            map:layout_constraintStart_toEndOf="@+id/b_"
            map:layout_constraintTop_toBottomOf="@+id/b8" />


        <Button
            android:id="@+id/beq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="50dp"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/b9" />

        <Button
            android:id="@+id/bp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="50dp"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/b_" />

        <Button
            android:id="@+id/bs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="50dp"
            map:layout_constraintEnd_toStartOf="@+id/bx"
            map:layout_constraintStart_toEndOf="@+id/bp"
            map:layout_constraintTop_toBottomOf="@+id/b0" />

        <Button
            android:id="@+id/bm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="50dp"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/bp" />

        <Button
            android:id="@+id/bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="50dp"
            map:layout_constraintEnd_toStartOf="@+id/bc"
            map:layout_constraintStart_toEndOf="@+id/bm"
            map:layout_constraintTop_toBottomOf="@+id/bs" />

        <Button
            android:id="@+id/bx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;X"
            android:textSize="50dp"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/beq" />

        <Button
            android:id="@+id/bc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="50dp"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/bx" />

    </androidx.constraintlayout.widget.ConstraintLayout>













